<?xml version="1.0"?>
<odoo>

    <!-- Header -->
    <header>
        <title>Lost Reasons</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    </header>

    <!-- Search Form -->
    <form action="/crm/lost_reason/search" method="get">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="e.g. Too expensive">
        </div>
        <div class="form-group">
            <label for="archived">Archived</label>
            <select class="form-control" id="archived" name="archived">
                <option value="all">All</option>
                <option value="true">Archived</option>
                <option value="false">Not Archived</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- Table of Lost Reasons -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Leads Count</th>
                <th>Archived</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for lost_reason in lost_reasons %}
                <tr>
                    <td>{{ lost_reason.name }}</td>
                    <td>{{ lost_reason.leads_count }}</td>
                    <td>{{ lost_reason.archived }}</td>
                    <td>
                        <a href="/crm/lost_reason/edit/{{ lost_reason.id }}">Edit</a>
                        <a href="/crm/lost_reason/delete/{{ lost_reason.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Footer -->
    <footer>
        <a href="/crm/lost_reason/new">Create New Lost Reason</a>
    </footer>

</odoo>
